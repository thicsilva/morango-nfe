<%- model_class = User -%>
<div class="page-header">
  <h1>Usuário</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name("tipo de acesso") %>:</strong></dt>
  <dd><%= @user.type_access %></dd>
  
</dl>
<% if current_user.type_access != 'User' %>
<%= link_to "Voltar",users_path, :class => 'btn btn-default'  %>
<% end %>

<% if current_user.type_access == 'MASTER' || @user.type_access != 'MASTER' %>
<%= link_to "Editar",
              edit_user_path(@user), :class => 'btn btn-default' %>
<%= link_to "Excluir",
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
              :class => 'btn btn-danger' %>
<% end %>